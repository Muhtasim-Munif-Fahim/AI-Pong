            <!-- Right Panel: AI Learning -->
            <div class="card">
                <div class="card-title">AI Learning</div>
                <div class="stat-item">
                    <span class="stat-label">Skill Level</span>
                    <span class="stat-value highlight" id="aiSkill">Clueless</span>
